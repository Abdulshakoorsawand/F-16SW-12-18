<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/view_rollnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="RollNum#"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/get_rollnum"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_rollnum"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/view_rollnum"
        android:hint="RollNum...."
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:text="Name:-"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!--<TextView-->
        <!--android:id="@+id/get_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/view_name"-->
        <!--android:hint="Name...."-->
        <!--android:textColor="#000"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="15dp"-->
        <!--/>-->

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@drawable/button"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        />
</RelativeLayout>